// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
}

model User {
  id                Int      @id @unique @default(autoincrement())
  email             String   @unique
  password          String
  fullName          String
  emailVerified     DateTime?
  profilePictureURL String?

  role              UserRole
  jobPostings       JobPosting[]
}

model JobPosting {
  id                Int      @id @unique @default(autoincrement())
  title        String
  description  String?
  requirements String?
  commodities  String?
  usdMinSalary Decimal
  usdMaxSalary Decimal
  arsMinSalary Decimal
  arsMaxSalary Decimal
  authorId     Int
  vacaciones   Int
  seniority    seniority
  salaryType   salaryType
  type         jobPostingType

  candidates   CandidateJobPosting[]
  techs        JobPostingTech[]
  author       User                  @relation(fields: [authorId], references: [id])
}

model JobPostingTech {
  id                Int      @id @unique @default(autoincrement())
  jobPostingId Int
  techId       Int

  jobPosting   JobPosting @relation(fields: [jobPostingId], references: [id])
  tech         Tech       @relation(fields: [techId], references: [id])

   @@unique([jobPostingId, techId], name: "uniqueJobPostingTech")
}

model CandidateTech {
  id                Int      @id @unique @default(autoincrement())
  candidateId Int
  techId       Int

  candidate   Candidate @relation(fields: [candidateId], references: [id])
  tech         Tech       @relation(fields: [techId], references: [id])

   @@unique([candidateId, techId], name: "uniqueCandidateTech")
}

model Tech {
  id                Int      @id @unique @default(autoincrement())
  title          String           @unique

  JobPostingTech JobPostingTech[]
  CandidateTech CandidateTech[]
}

model Candidate {
  id                Int      @id @unique @default(autoincrement())
  fullName           String
  email              String                @unique
  profilePictureURL  String
  seniority          seniority
  salary             Decimal
  education          String
  experience         Int
  permanencia        Decimal
  perfilExterno      String
  empresaActual      String
  vacaciones         Int
	fecha_nac					 DateTime
	edad							 Int
	sexo							 sexo
  posicionActual     String

  ingles             nivelIngles
  modalidad          jobPostingType

  appliedJobPostings CandidateJobPosting[]
  techs              CandidateTech[]
}

model CandidateJobPosting {
  id                Int      @id @unique @default(autoincrement())
  candidateId       Int
  jobPostingId      Int
  candidateMatch    Decimal
  organizationMatch Decimal

  candidate    Candidate  @relation(fields: [candidateId], references: [id])
  jobPosting   JobPosting @relation(fields: [jobPostingId], references: [id])

  @@unique([jobPostingId, candidateId], name: "uniqueJobPostingCandidate")
}

enum UserRole {
  USER
  ADMIN
}

enum jobPostingType {
  REMOTE
  OFFICE
  BOTH
}

enum seniority {
  TRAINEE
  JUNIOR
  SEMISENIOR
  SENIOR
}

enum salaryType {
  ARS
  USD
  BOTH
}

enum nivelIngles {
  PRINCIPIANTE
  BASICO
  INTERMEDIO
  AVANZADO
}

enum sexo {
  MASCULINO
  FEMENINO
  OTRO
}
